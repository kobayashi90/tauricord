{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tauricord",
  "version": "0.5.0",
  "identifier": "com.tauricord.dev",
  "build": {
    "devUrl": "https://discord.com/app"
  },
  "app": {
    "windows": [],
    "linux": {
      "acceptFirstMouse": true
    }
  },
  "plugins": {
    "fs": {},
    "dialog": {}
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "nsis"],
    "icon": ["icons/icon.png"],
    "resources": [],
    "windows": {
      "allowDowngrades": false
    },
    "linux": {
      "deb": {
        "desktopTemplate": "assets/io.tauricord.dev.desktop"
      }
    }
  }
}
